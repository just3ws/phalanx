                    "suit",
                    "rank"
                  ],
                  "additionalProperties": false
                },
                "position": {
                  "type": "object",
                  "properties": {
                    "row": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 1
                    },
                    "col": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 3
                    }
                  },
                  "required": [
                    "row",
                    "col"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "type",
                "playerIndex",
                "card",
                "position"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "const": "attack"
                },
                "playerIndex": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 1
                },
                "attackerPosition": {
                  "type": "object",
                  "properties": {
                    "row": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 1
                    },
                    "col": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 3
                    }
                  },
                  "required": [
                    "row",
                    "col"
                  ],
                  "additionalProperties": false
                },
                "targetPosition": {
                  "type": "object",
                  "properties": {
                    "row": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 1
                    },
                    "col": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 3
                    }
                  },
                  "required": [
                    "row",
                    "col"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "type",
                "playerIndex",
                "attackerPosition",
                "targetPosition"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "const": "heroicalSwap"
                },
                "playerIndex": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 1
                },
                "handCardIndex": {
                  "type": "integer",
                  "minimum": 0
                },
                "battlefieldPosition": {
                  "type": "object",
                  "properties": {
                    "row": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 1
                    },
                    "col": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 3
                    }
                  },
                  "required": [
                    "row",
                    "col"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "type",
                "playerIndex",
                "handCardIndex",
                "battlefieldPosition"
