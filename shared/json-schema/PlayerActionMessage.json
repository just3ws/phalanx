                    "suit": {
                      "type": "string",
                      "enum": [
                        "spades",
                        "hearts",
                        "diamonds",
                        "clubs"
                      ]
                    },
                    "rank": {
                      "type": "string",
                      "enum": [
                        "A",
                        "2",
                        "3",
                        "4",
                        "5",
                        "6",
                        "7",
                        "8",
                        "9",
                        "T",
                        "J",
                        "Q",
                        "K"
                      ]
                    }
