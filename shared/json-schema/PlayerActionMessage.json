            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "const": "pass"
                },
                "playerIndex": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "required": [
                "type",
                "playerIndex"
              ],
              "additionalProperties": false
            }
          ]
