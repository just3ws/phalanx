{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@phalanx/shared": ["./shared/src"],
      "@phalanx/shared/*": ["./shared/src/*"],
      "@phalanx/engine": ["./engine/src"],
      "@phalanx/engine/*": ["./engine/src/*"],
      "@phalanx/server": ["./server/src"],
      "@phalanx/server/*": ["./server/src/*"],
      "@phalanx/client": ["./client/src"],
      "@phalanx/client/*": ["./client/src/*"]
    }
  }
}
